<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Campaign Log <%= @campaign_log["id"] %></h3>
  <div>
    <%= link_to "Back", admin_campaign_logs_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="card card-primary">
  <div class="card-header">
    Campaign Log Details
  </div>
  <div class="card-body">
    <dl class="row">
      <strong class="col-sm-4 text-right">Date</strong>
      <dd class="col-sm-8"><%= Time.parse(@campaign_log["request_date"]) %><br></dd>
      <strong class="col-sm-4 text-right">Campaign</strong>
      <dd class="col-sm-8">
        <%= @campaign_log["campaign_name"] %>
        <%= link_to admin_campaign_path(@campaign_log["campaign_id"]), target: :_blank do %>
          <i class="icon fa fa-link"></i>
        <% end %><br>
      </dd>
      <strong class="col-sm-4 text-right">Member</strong>
      <dd class="col-sm-8">
        <% if Member.find_by(id: @campaign_log["member_id"])%>
          <%= Member.find_by(id: @campaign_log["member_id"]).email %>
          <%= link_to admin_member_path(@campaign_log["member_id"]), target: :_blank do %>
            <i class="icon fa fa-link"></i>
          <% end %>
        <% end %><br>
      </dd>
      <strong class="col-sm-4 text-right">Receive Currency</strong>
      <dd class="col-sm-8"><%= @campaign_log["receive_currency"] %><br></dd>
      <strong class="col-sm-4 text-right">Receive Amount</strong>
      <dd class="col-sm-8"><%= @campaign_log["receive_amount"] %><br></dd>
      <strong class="col-sm-4 text-right">Claimed?</strong>
      <dd class="col-sm-8"><%= @campaign_log["is_claimed"] %><br></dd>
      <strong class="col-sm-4 text-right">Remark</strong>
      <dd class="col-sm-8"><%= @campaign_log["remark"] %><br></dd>
    </dl>
  </div>
</div>
