<h3>Wallets Summary</h3>
<div class="card">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>

        <th class="text-right">Wallet Balance</th>
      </tr>
    </thead>
    <tbody>
      <% @hot_wallets.each do |c| %>
        <tr>
          <td>
            <b><%= c[:name] %></b>
          </td>

          <td class="text-right"><%= c[:balance] %></td>
        </tr>
      <% end %>

      <% @fee_wallets.each do |c| %>
        <tr>
          <td>
            <b><%= c[:name] %></b>
          </td>

          <td class="text-right"><%= c[:balance] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>