<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>New Campaign Post</h3>
  <div>
    <%= link_to "Back", admin_campaign_path(@campaign["id"]), class: "btn btn-secondary" %>
  </div>
</div>

<div class="card card-primary">
  <div class="card-header">
    Campaign Post Details
  </div>

  <div class="card-body">
    <%= form_tag add_post_action_admin_campaign_path, method: :post, multipart: true do %>
      <!-- <div class="row d-flex align-items-center">
        <div class="col-sm-5">
          <div class="text-center">
            <div class="form-group">
              <%= file_field_tag :upload %>
            </div>
          </div>
        </div>
        <div class="col-sm-7"> -->
          <div class="form-group">
            <%= label_tag :campaign %>
            <%= text_field_tag :campaign, @campaign["campaign_name"], class: "form-control", disabled: true %>
          </div>
          <div class="form-group">
            <%= label_tag :subject %>
            <%= text_field_tag :subject, @subject, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :body %>
            <%= text_area_tag :body, @body, size: "24x5", class: "form-control" %>
          </div>
        <!-- </div> -->
      <!-- </div> -->
      <%= submit_tag 'Submit', class: "btn btn-primary mt-3 float-right", data: {confirm: "Are you sure to create this campaign post?"} %>
    <% end %>
  </div>
</div>
