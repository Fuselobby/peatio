<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Reward Histories</h3>
  <div>
  </div>
</div>

<div class="card table-responsive">
  <table class="table table-bordered table-striped table-condensed">
    <thead>
      <tr>
        <th><%= sort_link("Date", "request_date") %></th>
        <th><%= sort_link("Campaign", "campaign_name") %></th>
        <th><%= sort_link("Receive Currency", "receive_currency") %></th>
        <th><%= sort_link("Receive Amount", "receive_amount") %></th>
        <th><%= sort_link("Remark", "remark") %></th>
      </tr>
    </thead>

    <tbody>
      <% @campaigns.each do |campaign| %>
        <tr>
          <td><%= Time.parse(campaign["request_date"]) %></td>
          <td>
            <%= campaign["campaign_name"] %>
            <%= link_to admin_campaign_path(campaign["campaign_id"]), target: :_blank do %>
              <i class="icon fa fa-link"></i>
            <% end %>
          </td>
          <td><%= campaign["receive_currency"] %></td>
          <td><%= campaign["receive_amount"] %></td>
          <td><%= campaign["remark"] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @campaigns %>
