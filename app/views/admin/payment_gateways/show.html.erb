<div class="d-flex justify-content-between align-items-center mb-3">
  <h3><%= @payment_gateway["provider"] %></h3>
  <div>
    <%= link_to "Edit", edit_admin_payment_gateway_path(@payment_gateway["id"]), class: "btn btn-primary mr-1" %>
    <%= link_to "Back", admin_payment_gateways_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="card card-primary">
  <div class="card-header">
    Payment Gateway Details
  </div>
  <div class="card-body">
    <dl class="row">
      <strong class="col-sm-4 text-right">Provider</strong>
      <dd class="col-sm-8"><%= @payment_gateway["provider"] %><br></dd>
      <strong class="col-sm-4 text-right">Rate</strong>
      <dd class="col-sm-8"><%= @payment_gateway["rate"] %><br></dd>
    </dl>
  </div>
</div>
