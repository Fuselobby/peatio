<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Payment Gateways</h3>
  <div>
    <%= link_to "New Payment Gateway", new_admin_payment_gateway_path, class: "btn btn-primary" %>
  </div>
</div>

<b><%= @count %></b> result(s)

<div class="card table-responsive">
  <table class="table table-bordered table-striped table-condensed">
    <thead>
      <tr>
        <th><%= sort_link("Provider", "provider") %></th>
        <th><%= sort_link("Rate", "rate") %></th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
     <% @payment_gateways.each do |payment_gateway| %>
       <tr>
         <td><%= payment_gateway["provider"] %></td>
         <td><%= payment_gateway["rate"] %></td>
         <td><%= link_to "View", admin_payment_gateway_path(payment_gateway["id"]) %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
</div>
<%= paginate @payment_gateways %>
