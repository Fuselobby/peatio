<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Edit Campaign Post</h3>
  <div>
    <%= link_to "Back", admin_campaign_post_path(@campaign_post["id"]), class: "btn btn-secondary" %>
  </div>
</div>

<div class="card card-primary">
  <div class="card-header">
    Campaign Post Details
  </div>
  <div class="card-body">
    <%= form_tag admin_campaign_post_path(@campaign_post["id"]), method: :put, multipart: true do %>
      <div class="row d-flex align-items-center">
        <div class="col-sm-5">
          <div class="text-center">
            <% if @image_url %>
              <%= image_tag @image_url, size: "340x200" %>
            <% else %>
              <h3>NO IMAGE UPLOADED</h3>
            <% end %>
            <div class="form-group mt-3">
              <%= file_field_tag :upload %>
            </div>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="form-group">
            <%= label_tag :campaign %>
            <%= text_field_tag :campaign, @campaign_post["campaign_name"], class: "form-control", disabled: true %>
          </div>
          <div class="form-group">
            <%= label_tag :subject %>
            <%= text_field_tag :subject, @campaign_post["subject"], class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :body %>
            <%= text_area_tag :body, @campaign_post["body"], size: "24x5", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :status %>
            <%= select_tag :status, options_for_select(['published', 'unpublished'], @campaign_post["status"]), class: "form-control" %>
          </div>
        </div>
      </div>
      <%= submit_tag 'Submit', class: "btn btn-primary mt-3 float-right", data: {confirm: "Are you sure to update this campaign post?"} %>
    <% end %>
  </div>
</div>
